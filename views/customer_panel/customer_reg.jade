extends ../customer_panel/customer_layout

block content
  h1= title
  p= message
  div
    form(method='POST' action='/api/customerReg')
      table.table.table-bordered
        tbody
          tr
            th Customer Name
            td
              input.form-control(type='text' name='cust_name' required='')
          tr
            th Email
            td
              input.form-control(type='email' name='cust_email')
          tr
            th Mobile
            td
              input.form-control(type='text' name='cust_mobile' required='')
          tr
            th Password
            td
              input.form-control(type='password' name='cust_pass' required='')
          tr
            th
            td
              input.btn.btn-info(type='submit' value='Registration')